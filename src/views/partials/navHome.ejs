<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="/home"><img class="img-fluid" src="images/logo-wolfleague.png" width="70" height="20px" />
            UCAB SPORT</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <% if (deportes.length> 0) { %>
            <div class="collapse navbar-collapse" id="navbarNav">
                <li class="nav-item"><a class="text-white linkMenu" href="/">Inicio</a></li>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown navbarDropdown2"
                            role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Ranking
                        </a>
                        <ul class="dropdown-menu dropdown-menu2" aria-labelledby="navbarDropdown">
                            <% deportes.forEach((deportes)=>{ %>
                                <li><a class="dropdown-item linkMenu" href="/deportes-<%= deportes.id %>">
                                        <%= deportes.nombreDeporte %>
                                    </a></li>
                                <% }) %>
                        </ul>
                    </li>
                </ul>
            </div>
            <% } %>
    </div>
</nav>

<script>
    // seleccionar el botón del navbar para abrir el menú desplegable
    const dropdownMenu = document.querySelector('.dropdown-toggle');
    const navbarDropdown = document.querySelector('.dropdown-menu2');

    // seleccionar el menú desplegable

    // función para comprobar el tamaño de la pantalla y mostrar u ocultar el menú desplegable en consecuencia
    function checkScreenSize() {
        if (window.innerWidth < 991) {
            dropdownMenu.classList.add('show');
            navbarDropdown.classList.add('show');
        } else {
            dropdownMenu.classList.remove('show');
            navbarDropdown.classList.remove('show');
        }
    }

    // llamar a la función cuando se cargue la página y cada vez que se redimensione la pantalla
    checkScreenSize();
    window.addEventListener('resize', checkScreenSize);

</script>