<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('partials/head.ejs') %>
        <link rel="stylesheet" href="/css/main.css">
        <title>Crear Nueva tabla eliminatoria</title>
       
</head>

<body>
    <%- include('partials/navigation.ejs') %>
        <section class="home-section">
            <div class="home-content">
                <i class='bx bx-menu'></i>
            </div>
            <div class="container mt-4">
                <div class="card border-secondary">
                    <div class="card-header">Nueva Eliminatoria</div>
                    <div class="card-body">
                        <form action="/saveEliminatoria" method="POST">
                            <div class="mb-3">
                                <label for="nombreDeporte" class="form-label">Nombre Deporte</label>
                                <select id="nombreDeporte" name="codDeporte" class="form-select" aria-label="Default select example"
                                  tabindex="2" required>
                                  <option selected disabled>
                                    Seleccione un deporte
                                  </option>
                                  <% deportes.forEach((deporte)=>{ %>
                                    <option value="<%= deporte.id %>">
                                      <%= deporte.nombreDeporte %> %>
                                    </option>
                                    <% }) %>
                                </select>
                              </div>
                            <div class="mb-3">
                                <label for="codEquipo" class="form-label">Equipo</label>
                                <select name="codEquipo" id="codEquipo1" class="form-select">
                                    <option disabled selected>Seleccione un equipo</option>
                                    <% equipos.forEach((equipos)=>{ %>
                                        <option value="<%= equipos.codEquipo %>">
                                            <%= equipos.nombreEquipo %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="codTorneo" class="form-label">Torneo</label>
                                <select name="codTorneo" id="codTorneo" class="form-select">
                                    <option disabled selected>Seleccione un torneo</option>
                                    <% torneos.forEach((torneos)=>{ %>
                                        <option value="<%= torneos.codTorneo %>">
                                            <%= torneos.nombreTorneo %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="Partidos Ganados" class="form-label">Partidos Jugados</label>
                                <input type="number" required class="form-control" id="juegos_jugados"
                                    name="juegos_jugados" tabindex="1">
                            </div>
                            
                            <div class="mb-3">
                                <label for="Juegos Ganados" class="form-label">Partidos Ganados</label>
                                <input type="number" required class="form-control" id="juegos_ganados"
                                    name="juegos_ganados" tabindex="1">
                            </div>
                            <div class="mb-3">
                                <label for="Partidos Empate" class="form-label">Partidos Empate</label>
                                <input type="number" required class="form-control" id="juegos_empate"
                                    name="juegos_empate" tabindex="1">
                            </div>
                            <div class="mb-3">
                                <label for="Juegos Perdidos" class="form-label">Juegos Perdidos</label>
                                <input type="number" required class="form-control" id="juegos_perdidos"
                                    name="juegos_perdidos" tabindex="1">
                            </div>
                            <div class="mb-3">
                                <label for="Goles a Favor" class="form-label">Goles a Favor</label>
                                <input type="number" required class="form-control" id="goles_a_favor"
                                    name="goles_a_favor" tabindex="1">
                            </div>
                            <div class="mb-3">
                                <label for="Goles en Contra" class="form-label">Goles en Contra</label>
                                <input type="number" required class="form-control" id="goles_en_contra"
                                    name="goles_en_contra" tabindex="1">
                            </div>
                            <div class="mb-3">
                                <label for="diferencia goles" class="form-label">Diferencia de Goles</label>
                                <input type="number" required class="form-control" id="diferencia_goles"
                                    name="diferencia_goles" tabindex="1">
                            </div>
                            <div class="mb-3">
                                <label for="puntos" class="form-label">Puntos</label>
                                <input type="number" required class="form-control" id="puntos"
                                    name="puntos" tabindex="1">
                            </div>
                            <button id="submit-btn" type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                            <a href="/admin/eliminatorias" class="btn btn-secondary">Cancelar</a>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <section class="home-section">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 mx-auto">
                        <div id="mensajes">
                            <p id="mensaje"></p>
                            <img class="rounded" src="../../images/medioAmbiente.png" width="330" height="230">
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <%- include('partials/selectEquipos.ejs') %>
        <%- include('partials/scripts.ejs') %>

</body>

</html>