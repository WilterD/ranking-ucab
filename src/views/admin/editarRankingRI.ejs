<html lang="es">

<head>
    <%- include('partials/head.ejs') %>
        <link rel="stylesheet" href="/css/main.css">
        <title>Editar Ranking Individual</title>
</head>

<body>
    <%- include('partials/navigation.ejs') %>
        <section class="home-section">
            <div class="home-content">
                <i class='bx bx-menu'></i>
            </div>
            <div class="container mt-4">
                <div class="card border-secondary">
                    <div class="card-header">Nuevo Ranking Individual</div>
                    <div class="card-body">
                        <form action="/updateRI" method="POST">
                            <input type="hidden" value="<%= ranking.id %>" class="form-control" id="id" name="id" tabindex="1" />
                            <div class="mb-3">
                                <label for="codJugador" class="form-label">Jugador</label>
                                <select id="codJugador" name="codJugador" class="form-select"
                                    aria-label="Default select example" tabindex="2" required>
                                    <option selected value="<%= ranking.codJugador %>">
                                        <%= ranking.nombreJugador %>
                                    </option>
                                    <% jugadores.forEach((jugadores)=>{ %>
                                        <option value="<%= jugadores.codJugador %>">
                                            <%= jugadores.nombreJugador %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="codCarrera" class="form-label">Carrera</label>
                                <select id="codCarrera" name="codCarrera" class="form-select"
                                    aria-label="Default select example" tabindex="2" required>
                                    <option selected value="<%= ranking.codCarrera %>">
                                        <%= ranking.nombreCarrera %>
                                    </option>
                                    <% carreras.forEach((carreras)=>{ %>
                                        <option value="<%= carreras.id %>">
                                            <%= carreras.nombreCarrera %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="name" class="form-label">Puntos</label>
                                <input type="number" class="form-control" id="puntos" name="puntos" tabindex="1"
                                    value="<%= ranking.puntos %>" />
                            </div>
                            <div class="mb-3">
                                <label for="deporte" class="form-label">Deporte</label>
                                <select id="codDeporte" name="codDeporte" class="form-select"
                                    aria-label="Default select example" tabindex="2" required>
                                    <option selected value="<%= ranking.codDeporte %>">
                                        <%= ranking.nombreDeporte %>
                                    </option>
                                    <% deportes.forEach((deporte)=>{ %>
                                        <option value="<%= deporte.id %>">
                                            <%= deporte.nombreDeporte %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                            <button id="submit-btn" type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                            <a href="javascript:history.back()" class="btn btn-secondary">Cancelar</a>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <section class="home-section">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 mx-auto">
                        <div id="mensajes">
                            <p id="mensaje"></p>
                            <img class="rounded" src="/../../images/medioAmbiente.png" width="330" height="230">
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <%- include('partials/scripts.ejs') %>
</body>

</html>